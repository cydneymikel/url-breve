# ==============================================
# URL Breve - Environment Configuration
# ==============================================

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database Configuration
# Adapter: 'postgres' or 'mongo'
DB_ADAPTER=postgres

# Database connection string
# For PostgreSQL: postgresql://username:password@host:port/database?schema=public
# For MongoDB: mongodb://localhost:27017/url-breve
DATABASE_URL=postgresql://username:password@localhost:5432/url_shortener?schema=public

# URL Generation Settings
SHORT_CODE_LENGTH=7
MAX_COLLISION_RETRIES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URL Validation
MAX_URL_LENGTH=2048
ALLOWED_PROTOCOLS=http,https

# Logging
LOG_LEVEL=info
